{
  "version": 2,
  "outputDirectory": "public",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/favicon.ico",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/x-icon"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/send-push-notifications",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/send-push-notifications",
      "schedule": "0 18 * * *"
    }
  ]
}
